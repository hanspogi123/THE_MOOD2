<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="THEMOOD.Logins.Login"
             Title="Login"
             xmlns:vm="clr-namespace:THEMOOD.ViewModels"
             BackgroundImageSource="login_wp.png">

    <ContentPage.Resources>
        <Style x:Key="LoginCardStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="Padding" Value="36,32"/>
            <Setter Property="WidthRequest" Value="400"/>
            <Setter Property="MinimumWidthRequest" Value="320"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Frame x:Name="LoginCard"
               Padding="30,100,30,30"
               HasShadow="False"
               BackgroundColor="Transparent">
            <VerticalStackLayout Spacing="20">
                <!-- Welcome Text -->
                <VerticalStackLayout x:Name="WelcomeTextContainer">
                    <Label x:Name="WelcomeText"
                           Text="Welcome Back!"
                           FontFamily="GentySans"
                           FontSize="38"
                           TextColor="Black" />
                </VerticalStackLayout>

                <!-- Spacer to move other controls lower -->
                <BoxView x:Name="WelcomeSpacer" HeightRequest="60" BackgroundColor="Transparent" Color="Transparent" Opacity="0" />

                <!-- Email Field -->
                <Grid ColumnDefinitions="40,*,30" VerticalOptions="Center" HeightRequest="50">
                    <Image Source="envelope1.png"
                           Grid.Column="0"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                    <Entry Grid.Column="1"
                           x:Name="Email"
                           Style="{StaticResource EmailEntryStyle}" />
                </Grid>

                <!-- Password Field -->
                <Grid ColumnDefinitions="40,*,30" VerticalOptions="Center" HeightRequest="50">
                    <Image Source="password1.png"
                           Grid.Column="0"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                    <Entry Grid.Column="1"
                           TextColor="Black"
                           x:Name="Password"
                           Style="{StaticResource PasswordEntryStyle}" />
                </Grid>

                <BoxView HeightRequest="5" BackgroundColor="Transparent" Color="Transparent" Opacity="0" />

                <!-- Log in Button -->
                <Button Text="⭐  Log in"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource LightButtonStyle}"
                        Clicked="OnLoginClicked"
                        Padding="50,0"/>

                <!-- OR Separator -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <BoxView WidthRequest="120" HeightRequest="1" BackgroundColor="Black" VerticalOptions="Center"/>
                    <Label Text="or" FontFamily="Arial" FontSize="14" VerticalOptions="Center"/>
                    <BoxView WidthRequest="120" HeightRequest="1" BackgroundColor="Black" VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Sign Up Button -->
                <Button Text="⭐  Sign Up"
                        Command="{Binding SignUpLipatCommand}"
                        Clicked="SignUp_Clicked"
                        Style="{StaticResource DarkButtonStyle}"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>