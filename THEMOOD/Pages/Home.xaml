<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:THEMOOD.Behaviors"
             x:Class="THEMOOD.Pages.Home">

    <Grid RowDefinitions="*, Auto" BackgroundColor="#f8f8f8">
        <!-- Main Content -->
        <Grid Grid.Row="0" Padding="20">
            <Frame BorderColor="Transparent"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False"
                   BackgroundColor="White"
                   VerticalOptions="Center">
                <Frame.Shadow>
                    <Shadow Brush="#20000000"
                           Offset="0,2"
                           Radius="4" />
                </Frame.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Welcome to THEMOOD"
                           FontSize="24"
                           FontFamily="GentySans"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"/>
                    
                    <Label Text="Your mood tracking companion"
                           FontSize="16"
                           FontFamily="GentySans"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="*, *" 
              Padding="20,0,20,20"
              BackgroundColor="Transparent">
            <Button Grid.Column="0"
                    Text="Log Out"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="#ff69b4"
                    TextColor="White"
                    FontFamily="GentySans"
                    Padding="15,8"
                    CornerRadius="20"
                    Margin="0,0,10,0">
                <Button.Behaviors>
                    <behaviors:SoundEffectBehavior SoundType="button" />
                </Button.Behaviors>
            </Button>
            <Button Grid.Column="1"
                    Text="Exit"
                    Clicked="OnExitClicked"
                    BackgroundColor="#ff69b4"
                    TextColor="White"
                    FontFamily="GentySans"
                    Padding="15,8"
                    CornerRadius="20"
                    Margin="10,0,0,0">
                <Button.Behaviors>
                    <behaviors:SoundEffectBehavior SoundType="button" />
                </Button.Behaviors>
            </Button>
        </Grid>
    </Grid>
</ContentView>
