<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:THEMOOD.Controls"
             xmlns:viewmodels="clr-namespace:THEMOOD.ViewModels"
             x:Class="THEMOOD.MainPage"
             BackgroundImageSource="mainpage_bg.png">

    <Grid RowDefinitions="*, Auto" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}">
        <!-- Exit Button -->
        <Button x:Name="ExitButton"
                Text="✕"
                FontSize="20"
                WidthRequest="40"
                HeightRequest="40"
                CornerRadius="20"
                BackgroundColor="Transparent"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10"
                Clicked="OnExitButtonClicked"/>

        <!-- Dynamic Content Area -->
        <ContentPresenter x:Name="MainContentArea" Grid.Row="0" />

        <!-- NavBar -->
        <controls:CustomNavBar Grid.Row="1" x:Name="NavBar" />
    </Grid>

</ContentPage>